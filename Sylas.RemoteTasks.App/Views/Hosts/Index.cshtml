@{
    ViewData["Title"] = "Remote Hosts Manager ...";
}
<div class="container my-4">
    <div class="row">
        @foreach (var manager in Model)
        {
            var remoteHostInfos = manager.RemoteHostInfos();
            <h3 class="my-3 text-center">@(manager.RemoteHost.Ip) (@remoteHostInfos.Count)</h3>
            <div class="row">
                @foreach (var info in remoteHostInfos)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header" id="heading-@(info.Name.Replace(".", "-"))">
                                <h5 class="card-title mb-0">
                                    <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(info.Name.Replace(".", "-"))" aria-expanded="false" aria-controls="collapse@(info.Name.Replace(".", "-"))">
                                        @info.Name
                                    </button>
                                </h5>
                            </div>
                            <div id="collapse@(info.Name.Replace(".", "-"))" class="collapse" aria-labelledby="heading-@(info.Name.Replace(".", "-"))" data-bs-parent="#accordion">
                                <div class="card-body">
                                    <p class="card-text">
                                        @foreach (var label in info.Labels)
                                        {
                                            @label.Item1 <b>: </b> @label.Item2 <br>
                                        }
                                    </p>
                                    <p class="card-text">
                                        @foreach (var infoCmd in info.Commands)
                                        {
                                            <button class="btn default" onclick="executeCommand('@manager.RemoteHost.Ip', '@info.Name', '@infoCmd.Name', '@infoCmd.Command')">@infoCmd.Name - @(infoCmd.Command.Length > 20 ? infoCmd.Command.Substring(0, 20) + "..." : infoCmd.Command)</button>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                } 
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
        function executeCommand(hostIp, hostInfoName, commandName, command) {
            fetch('/Hosts/Execute', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ hostIp, hostInfoName, commandName, command })
            })
                .then(response => {
                    if (response.ok) {
                        var rspJson = response.json();
                        console.log("Command executed successfully: " + rspJson);
                        return rspJson;
                    } else {
                        console.error("Failed to execute command: " + response.json());
                    }
                })
                .then(rspJson => {
                    alert('操作成功: ' + rspJson.msg)
                })
                .catch(error => {
                    console.error("Error:", error);
                });
        }
    </script>
}
